{
  "manifest_version": 3,
  "name": "X Timeline Filter",
  "version": "1.0",
  "description": "Filter out tweets containing specific keywords",
  "permissions": ["storage"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "50": "icons/icon.png"
    }
  },
  "icons": {
    "50": "icons/icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}
